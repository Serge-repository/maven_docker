pipeline {
    agent none
    stages {
        stage('Build Jar') {
            agent {
                docker {
                    image 'maven:3-alpine'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Build Image') {
            steps {
                script {
                	app = docker.build("serge11elzar/maven_docker")
                }
            }
        }
        stage('Push Image') {
            steps {
                script {
                //"dockerhub" - credentials ID name from Jenkins
			        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
			        //${BUILD_NUMBER} defines build number in Jenkins
			        	app.push("${BUILD_NUMBER}")
			            app.push("latest")
			        }
                }
            }
        }
    }
}